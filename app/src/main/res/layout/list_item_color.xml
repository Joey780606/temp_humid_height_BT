<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/item_sel"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:textSize="17sp"
        android:textColor="@color/gray20"
        android:id="@+id/list_item_color_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="5dp"
        android:text="Temp Units"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="20dp"/>
    <pcp.com.bttemperature.controls.ColorBar
        android:id="@+id/list_item_color_colorBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
